{
  "$schema": "https://json.schemastore.org/tsconfig",
  "extends": "tsconfig/base.json",
  "include": ["src/**/*"],
  "compilerOptions": {
    "target": "ESNext",
    "moduleResolution": "Bundler",
    "noErrorTruncation": true,
    "module": "NodeNext"
  },
  "exclude": ["dist", "build", "node_modules"]
}
